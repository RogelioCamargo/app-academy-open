<a href="<%= cats_url %>">show all cats</a>

<h1><%= @cat.name %></h1>

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
</table>

<a href="<%= edit_cat_url(@cat) %>">edit</a>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.cat_rental_requests.order('start_date').each do |req| %>
    <tr>
			<td><%= req.start_date %></td>
			<td><%= req.end_date %></td>
			<td>
				<% if req.pending? %>
					<form action="<%= approve_cat_rental_request_url(req) %>" method="post">
						<input
							type="hidden"
							name="authenticity_token"
							value="<%= form_authenticity_token %>">
						<input type="submit" value="Approve">
					</form>
					<form action="<%= deny_cat_rental_request_url(req) %>" method="post">
						<input
							type="hidden"
							name="authenticity_token"
							value="<%= form_authenticity_token %>">
						<input type="submit" value="Deny">
					</form>
				<% else %>
					<%= req.status %>
				<% end %>
			</td>
		</tr>
  <% end %>
</table>